# Application Configuration
APP_NAME=TranslatorWebServer
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./translator.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/translator_db
# For MySQL: mysql+aiomysql://user:password@localhost:3306/translator_db

# MongoDB Configuration
MONGODB_URI=mongodb://user:password@localhost:27017/translation?authSource=translation
MONGODB_DATABASE=translation

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
DEEPL_API_KEY=your-deepl-api-key
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_REGION=eastus

# Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=txt,doc,docx,pdf,rtf,odt
UPLOAD_DIR=./uploads
TEMP_DIR=./uploads/temp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/translator.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_CREDENTIALS=True
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=True

# Google Drive Configuration
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials.json
GOOGLE_DRIVE_TOKEN_PATH=./token.json
GOOGLE_DRIVE_ROOT_FOLDER=TranslatorWebServer
GOOGLE_DRIVE_APPLICATION_NAME=TranslatorWebServer

# Email Configuration (Yahoo SMTP - Default)
# ⚠️  IMPORTANT: For Yahoo, you MUST use an app-specific password:
#    1. Enable Two-Step Verification: https://login.yahoo.com/account/security
#    2. Generate App Password: https://login.yahoo.com/account/security
#    3. Use the 16-character app password (NOT your regular Yahoo password)
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=587
SMTP_USERNAME=your.email@yahoo.com
SMTP_PASSWORD=your_16_char_app_password_here
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_TIMEOUT=30
EMAIL_FROM=your.email@yahoo.com
EMAIL_FROM_NAME=Iris Solutions Translation Services
EMAIL_REPLY_TO=your.email@yahoo.com
EMAIL_ENABLED=true
EMAIL_TEMPLATE_DIR=./app/templates/email
TRANSLATION_SERVICE_COMPANY=Iris Solutions

# Alternative: Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your.email@gmail.com
# SMTP_PASSWORD=your_gmail_app_password
# Generate: https://myaccount.google.com/apppasswords

# Alternative: SendGrid SMTP (Recommended for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key

# Alternative: Office 365 SMTP
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USERNAME=your.email@company.com
# SMTP_PASSWORD=your_password
# ================================
# Rate Limiting
# ================================
# Enable/disable rate limiting (set to false for tests/development to speed up test execution)
# When disabled, all API endpoints bypass rate limit checks
# Recommended: false for development/testing, true for production
RATE_LIMITING_ENABLED=true
