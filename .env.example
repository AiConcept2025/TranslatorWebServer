# ============================================
# BACKEND ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env and replace with your actual values
# ALL FIELDS MARKED AS REQUIRED MUST BE SET - SERVER WILL FAIL TO START IF MISSING
# ============================================

# ============================================
# CORE APPLICATION
# ============================================
SECRET_KEY=  # REQUIRED: Minimum 32 characters, use: openssl rand -hex 32
DEBUG=true
ENVIRONMENT=development  # Options: development, production
HOST=0.0.0.0
PORT=8000

# ============================================
# DATABASE - MongoDB
# ============================================
MONGODB_URI=  # REQUIRED: Format: mongodb://user:password@host:port/database or mongodb+srv://...
MONGODB_DATABASE=translation  # Database name (use 'translation_test' for testing)

# ============================================
# GOOGLE DRIVE - Document Storage
# ============================================
# Service Account Setup:
#   1. Create project: https://console.cloud.google.com/
#   2. Enable Drive API: https://console.cloud.google.com/apis/library/drive.googleapis.com
#   3. Create service account: https://console.cloud.google.com/iam-admin/serviceaccounts
#   4. Download JSON key file
#   5. Share Google Drive folder with service account email

GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CREDENTIALS_PATH=  # REQUIRED: Path to service account JSON key file (e.g., ./secrets/service-account-key.json)
GOOGLE_DRIVE_PARENT_FOLDER_ID=  # REQUIRED: Root Google Drive folder ID (get from folder URL)
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.file  # REQUIRED: Do not change unless you know what you're doing

# OAuth2 (optional - only for desktop apps, not needed for service accounts)
GOOGLE_DRIVE_TOKEN_PATH=./token.json  # Optional: OAuth2 token storage path
GOOGLE_DRIVE_APPLICATION_NAME=TranslatorWebServer  # Optional: Application identifier

# ============================================
# EMAIL - SMTP Configuration
# ============================================
# Yahoo SMTP Example:
#   1. Enable 2FA: https://login.yahoo.com/account/security
#   2. Generate App Password: https://login.yahoo.com/account/security
#   3. Use app-specific password (16 characters, NOT your regular password)
#
# Gmail SMTP Example:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   1. Enable 2FA: https://myaccount.google.com/security
#   2. Generate App Password: https://myaccount.google.com/apppasswords
#
# Other SMTP providers: Update SMTP_HOST and SMTP_PORT accordingly

SMTP_HOST=  # REQUIRED: SMTP server hostname (e.g., smtp.mail.yahoo.com, smtp.gmail.com)
SMTP_PORT=  # REQUIRED: SMTP port (587 for TLS, 465 for SSL, 25 for non-encrypted)
SMTP_USERNAME=  # REQUIRED: SMTP authentication username (typically your email address)
SMTP_PASSWORD=  # REQUIRED: SMTP authentication password (use app-specific password, NOT regular password)
SMTP_USE_TLS=true  # Use TLS encryption (recommended for port 587)
SMTP_USE_SSL=false  # Use SSL encryption (set true for port 465)
SMTP_TIMEOUT=30  # Connection timeout in seconds
EMAIL_FROM=  # REQUIRED: Sender email address (must match SMTP_USERNAME for most providers)
EMAIL_FROM_NAME=  # REQUIRED: Sender display name (e.g., "Your Company Translation Services")
EMAIL_REPLY_TO=  # Optional: Reply-to email address (if different from EMAIL_FROM)
EMAIL_ENABLED=true  # Enable/disable email functionality

# ============================================
# STRIPE - Payment Processing
# ============================================
# Get keys from: https://dashboard.stripe.com/test/apikeys (test) or /apikeys (live)
# ⚠️  CRITICAL:
#     - Use test keys (sk_test_*) for development/testing
#     - Use live keys (sk_live_*) for production ONLY
#     - NEVER commit actual keys to git
#     - Rotate keys immediately if exposed

STRIPE_SECRET_KEY=  # Optional: Stripe secret API key (leave empty to disable Stripe)
STRIPE_WEBHOOK_SECRET=  # Optional: Stripe webhook signing secret (for webhook verification)

# ============================================
# BUSINESS CONFIGURATION
# ============================================
TRANSLATION_SERVICE_COMPANY=  # REQUIRED: Your company/service name (appears in emails and documents)

# ============================================
# CORS - Cross-Origin Resource Sharing
# ============================================
# REQUIRED: Comma-separated list of allowed frontend origins
# Development example: http://localhost:3000,http://localhost:5173
# Production example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=  # REQUIRED: Comma-separated list of allowed origins

# ============================================
# API CONFIGURATION
# ============================================
# Production API URL (required when ENVIRONMENT=production)
# Example: https://api.yourdomain.com
API_URL=  # Optional in development, REQUIRED in production

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB default
MAX_DOCUMENT_SIZE=104857600  # 100MB default
MAX_IMAGE_SIZE=52428800  # 50MB default
ALLOWED_FILE_TYPES=txt,doc,docx,pdf,rtf,odt,jpeg,jpg,png,tiff,tif
UPLOAD_DIR=./uploads
TEMP_DIR=./uploads/temp

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=3600  # Window size in seconds (1 hour)

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/translator.log

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
HEALTH_CHECK_INTERVAL=30  # Seconds
METRICS_ENABLED=true

# Subscription Configuration
SUBSCRIPTION_SOFT_LIMIT=-100  # Warning threshold for negative balance

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Translation API Keys (if using external translation services)
GOOGLE_TRANSLATE_API_KEY=  # Optional
DEEPL_API_KEY=  # Optional
AZURE_TRANSLATOR_KEY=  # Optional
AZURE_TRANSLATOR_ENDPOINT=  # Optional
AZURE_TRANSLATOR_REGION=  # Optional
